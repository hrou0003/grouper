{
  "manifest_version": 3,
  "name": "Auto Group Tabs by Domain",
  "version": "1.0",
  "description": "Groups tabs in the current window by their domain name.",
  "permissions": ["tabs", "tabGroups"],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Group Tabs by Domain"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
